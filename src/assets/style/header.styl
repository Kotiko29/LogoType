.header
  font-family 'Roboto', sans-serif
  .header__top
    background-color #303030
    .header__contacts
      &:after
        content ''
        display block
        clear both
      .header__btn
        float right
        padding-top 5px
        padding-right 20px
        padding-bottom 4px
        padding-left 50px
        font-size 16px
        line-height 36px      
        color #1b1b1b
        background-color #ffc222
      .header__phone, .header__email
        line-height 45px
        letter-spacing 0.25px
        color #cbcacb
      .header__phone
        padding-left 20px
        padding-right 30px
      .header__email
        padding-left 24px

  .header__content
    padding-top 34px
    padding-bottom 23px
    .header__content-inner
      display flex
      justify-content space-between
      .menu li 
        display inline-block
      li+li 
        padding-left 10px
      a 
        color #32 
        font-size 16px
        line-height 36px
        border 1px solid transparent
        padding 0px 16px
        &:hover 
          border-color #ffc222



